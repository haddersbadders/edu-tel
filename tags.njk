---
pagination:
  data: collections
  size: 1
  alias: tag
  filter:
    - all
    - nav
    - post
    - posts
permalink: /tags/{{ tag }}/
layout: layouts/base.njk

---

<h1 class="tags">Tagged with “{{ tag }}”</h1>

{% set postslist = collections[tag] %}
{% include "components/postslist.njk" %}

<nav class="tags">
  <a href="{{ '/blog/' | url }}">← Blog index</a>
</nav>
